generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invoices {
  id      String   @id @default(uuid())
  Date    DateTime @default(now())
  Title   String
  amount  Int
  Status  String
  Subject String
   @@map("Invoices")  // Nama tabel di database tetap "Invoices"
}

model User {
  id    Int    @id @default(autoincrement())
  Email String @unique
  Pass  String
  name  String
   @@map("User")  // Nama tabel di database tetap "Invoices"
}
